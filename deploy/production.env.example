# Production Environment Configuration
# PA Penajam Website - Production Environment

APP_NAME="Pengadilan Agama Penajam"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://pa-penajam.go.id
APP_TIMEZONE="Asia/Makassar"

APP_LOCALE=id
APP_FALLBACK_LOCALE=id
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

################################################################################
# Database Configuration
################################################################################

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=pa_penajam_prod
DB_USERNAME=pa_penajam_user
DB_PASSWORD=change-this-password-in-production

# Database options
DB_USE_STRICT_MODE=false
DB_ENGINE=null

################################################################################
# Cache, Session, and Queue Configuration
################################################################################

CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.pa-penajam.go.id
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

SESSION_COOKIE_NAME=pa_penajam_session
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAME_SITE=lax

################################################################################
# Redis Configuration
################################################################################

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=change-this-redis-password
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

################################################################################
# Mail Configuration
################################################################################

MAIL_MAILER=smtp
MAIL_SCHEME=smtp
MAIL_HOST=mail.pa-penajam.go.id
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@pa-penajam.go.id"
MAIL_FROM_NAME="${APP_NAME}"

# Admin notifications
MAIL_TO_ADDRESS=admin@pa-penajam.go.id

################################################################################
# AWS S3 Configuration (Optional - for file storage)
################################################################################

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

################################################################################
# SIPP API Configuration
################################################################################

SIPP_API_BASE_URL=https://sipp.pa-penajam.go.id/api
SIPP_API_KEY=
SIPP_API_BEARER_TOKEN=
SIPP_API_TIMEOUT=30
SIPP_API_RETRY_ATTEMPTS=3
SIPP_API_RETRY_DELAY=1000
SIPP_API_RATE_LIMIT_REQUESTS=100
SIPP_API_RATE_LIMIT_WINDOW=60

# SIPP Sync Configuration
SIPP_SYNC_ENABLED=true
SIPP_SYNC_SCHEDULE="0 */6 * * *"
SIPP_SYNC_BATCH_SIZE=100
SIPP_SYNC_CONFLICT_RESOLUTION=3
SIPP_SYNC_NOTIFICATIONS_ENABLED=true
SIPP_SYNC_NOTIFICATION_EMAILS=admin@pa-penajam.go.id

################################################################################
# Filament Configuration
################################################################################

FILAMENT_FILESYSTEM_DISK=public
FILAMENT_LOGIN_DOMAIN=admin

################################################################################
# Security Configuration
################################################################################

# Password requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL_CHARACTER=true

# Two-factor authentication
FORTIFY_TWO_FACTOR_ENABLED=true

# Rate limiting
FORTIFY_LOGIN_THROTTLE=5
FORTIFY_REGISTRATION_THROTTLE=5

################################################################################
# Logging Configuration
################################################################################

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Slack error logging (optional)
LOG_SLACK_WEBHOOK_URL=

################################################################################
# Backup Configuration
################################################################################

BACKUP_DISK=s3
BACKUP_NOTIFICATION_MAIL=admin@pa-penajam.go.id
BACKUP_NOTIFICATION_SLACK=
BACKUP_SCHEDULE="0 2 * * *"

################################################################################
# Monitoring and Analytics
################################################################################

# Bug tracking
BUGSNAG_API_KEY=
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Analytics
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

################################################################################
# Performance Optimization
################################################################################

# OPcache settings (configured in php.ini)
OPCACHE_ENABLE=1
OPCACHE_MEMORY_CONSUMPTION=256
OPCACHE_INTERNED_STRINGS_BUFFER=16
OPCACHE_MAX_ACCELERATED_FILES=10000
OPCACHE_REVALIDATE_FREQ=60

# Vite optimization
VITE_APP_NAME="${APP_NAME}"

################################################################################
# Content Security
################################################################################

# CSP headers
CSP_ENABLED=true
CSP_REPORT_ONLY=false

# Allowed hosts
ALLOWED_HOSTS=pa-penajam.go.id,www.pa-penajam.go.id

# Trust proxies
TRUSTED_PROXIES=*

################################################################################
# Social Media Integration
################################################################################

FACEBOOK_URL=
TWITTER_URL=
INSTAGRAM_URL=
YOUTUBE_URL=

################################################################################
# Localization
################################################################################

# Default locale settings
DATE_FORMAT="d F Y"
TIME_FORMAT="H:i"
DATETIME_FORMAT="d F Y H:i"
CURRENCY_FORMAT="IDR"

################################################################################
# Features Flags
################################################################################

FEATURE_PAGE_BUILDER=true
FEATURE_MENU_EDITOR=true
FEATURE_DOCUMENT_MANAGEMENT=true
FEATURE_COURT_SCHEDULE=true
FEATURE_PPID_PORTAL=true
FEATURE_BUDGET_TRANSPARENCY=true
FEATURE_CASE_STATISTICS=true

################################################################################
# Third-Party Services
################################################################################

# ReCAPTCHA (for form protection)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Google Maps (for location display)
GOOGLE_MAPS_API_KEY=

################################################################################
# SSL Configuration
################################################################################

FORCE_HTTPS=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true

################################################################################
# Maintenance Mode
################################################################################

MAINTENANCE_MODE_SECRET=

################################################################################
# Custom Configuration
################################################################################

# Court information
COURT_NAME="Pengadilan Agama Penajam"
COURT_ADDRESS="Jl. Protokol No. 1, Penajam"
COURT_PHONE="(0542) 123456"
COURT_EMAIL=info@pa-penajam.go.id
COURT_WORKING_HOURS="Senin - Kamis: 08:00 - 16:00, Jumat: 08:00 - 16:30"

# Social media
SOCIAL_MEDIA_FACEBOOK=
SOCIAL_MEDIA_INSTAGRAM=
SOCIAL_MEDIA_YOUTUBE=
SOCIAL_MEDIA_TWITTER=
